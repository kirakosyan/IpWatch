<Window x:Class="WatcherApp.AddHostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatcherApp"
        mc:Ignorable="d" 
        ResizeMode="NoResize"
        Title="Add host" Height="450" Width="600">
    <Grid>
        <Label Content="Host" HorizontalAlignment="Left" Margin="82,37,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,45,0,0" Text="{Binding Host}" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
